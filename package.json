    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "fake-indexeddb": "^6.2.2",
    "happy-dom": "^19.0.2",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "workbox-build": "^7.3.0"
  },
  "dependencies": {
    "idb": "^8.0.3",
    "workbox-window": "^7.3.0"
